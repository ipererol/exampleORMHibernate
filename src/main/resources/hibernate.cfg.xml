<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <!-- Configuration of the database connection -->
        <property name="connection.driver_class">org.mariadb.jdbc.Driver</property>
        <property name="connection.url">jdbc:mariadb://localhost:3306/mydb</property>
        <property name="connection.username">user</property>
        <property name="connection.password">pass</property>

        <!-- Database dialect configuration -->
        <property name="dialect">org.hibernate.dialect.MariaDBDialect</property>

        <!-- Configuration of the SQL query display mode -->
        <property name="show_sql">true</property>

        <!-- DDL generation configuration (create, update, validate, none) -->
        <property name="hbm2ddl.auto">update</property>

        <!-- Entity class mapping -->
        <mapping class="org.dam.model.Student" />
    </session-factory>
</hibernate-configuration>